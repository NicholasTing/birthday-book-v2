generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model cards {
  id             String        @id @default(uuid())
  recipient      String
  code           String        @unique
  created_at     DateTime      @default(now())
  occasion       String
  custom_message String?
  card_senders   messages[]
  albumCards     album_cards[]
}

model messages {
  id         String   @id @default(uuid())
  card_id    String
  card       cards    @relation(fields: [card_id], references: [id], onDelete: Cascade)
  author     String
  message    String   @db.Text
  gif        String?
  created_at DateTime @default(now())
}

model albums {
  id            String        @id @default(uuid())
  code          String        @unique
  name          String
  passcode_hash String
  created_at    DateTime      @default(now())
  cards         album_cards[]
}

model album_cards {
  id         String   @id @default(uuid())
  album_id   String
  card_id    String
  year_label Int?
  added_at   DateTime @default(now())

  album albums @relation(fields: [album_id], references: [id], onDelete: Cascade)
  card  cards  @relation(fields: [card_id], references: [id], onDelete: Cascade)

  @@unique([album_id, card_id])
}
